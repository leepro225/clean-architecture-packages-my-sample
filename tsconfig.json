{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
   }
}